T := $(TARG:%.a=%)

TARG := lib/$(T)/$(T).a

ALL += $(TARG)

OFILES := $(OFILES:%=lib/$(T)/%)

ALLO += $(OFILES)

LIBHFILES := $(LIBDEPS:%=include/%.h)

LIBDEPS := $(shell echo $(LIBDEPS) | awk '{ for(i = 1; i <= NF; i++) printf("lib/%s/%s.a ", $$i, $$i) }')

HFILES := $(HFILES:%=lib/$(T)/%) $(LIBHFILES) include/$(T).h

$(TARG): $(OFILES) $(LIBDEPS)
	$(AR) rsc $@ $(shell echo $^ | sed 's/[a-z]+\.a//g')

$(OFILES): $(HFILES) $(LIBHFILES)
